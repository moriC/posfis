<div class="login-contents">

<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div><%= f.label :user_name %><br />
  <%= f.text_field :user_name, :autofocus => true %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.label :user_address_number %><br />
  <%= f.text_field :user_address_number %></div>

  <div><%= f.label :user_address %><br />
  <%= f.text_field :user_address %></div>

  <div><%= f.label :avatar %><br />
  <%= f.file_field :avatar %></div>


  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>